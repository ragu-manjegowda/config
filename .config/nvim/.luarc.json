{
    "$schema": "https://raw.githubusercontent.com/sumneko/vscode-lua/master/setting/schema.json",
    "completion": {
        "callSnippet": "Both"
    },
    "diagnostics": {
        "enable": true,
        "globals": [
            "vim",
            "capabilities",
            "pcall",
            "require"
        ],
        "neededFileStatus": {
            "codestyle-check": "Any"
        }
    },
    "format": {
        "defaultConfig": {
            "quote_style": "double"
        }
    },
    "workspace": {
        "checkThirdParty": false,
        "library": [
            "/usr/share/nvim/runtime",
            "~/.local/share/nvim/lazy",
            "${3rd}/busted/library",
            "${3rd}/luassert/library"
        ],
        "maxPreload": 2000,
        "preloadFileSize": 1000
    }
}

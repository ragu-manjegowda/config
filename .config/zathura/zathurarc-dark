set notification-error-bg       "#586e75"
set notification-error-fg       "#dc322f"
set notification-warning-bg     "#586e75"
set notification-warning-fg     "#dc322f"
set notification-bg             "#586e75"
set notification-fg             "#b58900"

set completion-group-bg         "#002b36"
set completion-group-fg         "#fdf6e3"
set completion-bg               "#073642"
set completion-fg               "#839496"
set completion-highlight-bg     "#586e75"
set completion-highlight-fg     "#eee8d5"

# Define the color in index mode
set index-bg                   "#073642"
set index-fg                   "#839496"
set index-active-bg             "#586e75"
set index-active-fg             "#eee8d5"

set inputbar-bg                 "#586e75"
set inputbar-fg                 "#eee8d5"

set statusbar-bg                "#073642"
set statusbar-fg                "#839496"

set highlight-color             "#657b83"
set highlight-active-color      "#268bd2"

set default-bg                  "#073642"
set default-fg                  "#839496"
# set render-loading              true
# set render-loading-fg           "#073642"
# set render-loading-bg           "#073642"

# Recolor book content's color
set recolor                     true
set recolor-lightcolor          "#073642"
set recolor-darkcolor           "#839496"
# set recolor-keephue             true      # keep original color

# GUI & Window
set adjust-open                 "width"
set page-padding                10
set recolor                     "true"
set recolor-reverse-video       "true"
set scroll-step                 60
set show-directories            "false"
set show-hidden                 "true"
set statusbar-basename          "true"
set statusbar-home-tilde        "true"
set statusbar-h-padding         0
set statusbar-v-padding         0
set window-title-basename       "true"
set window-title-home-tilde     "true"
set window-title-page           "true"
set zoom-center                 "true"

# copy selection to system clipboard
set selection-clipboard         clipboard

# enable incremental search
set incremental-search          "true"
set abort-clear-search          "true"

# map R to reload
map R reload


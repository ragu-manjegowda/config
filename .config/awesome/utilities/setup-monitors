#!/usr/bin/env bash

# Depends: Xrandr
# Written by ragu-manjegowda

# make everything on highDPI monitor not look teeny-tiny
xrandr --dpi 192

# set up high DPI monitor
# xrandr --output eDP-1 --mode 3840x2400 --pos 0x0

# Following fixes low res monitor cursor and resolution issue

# xrandr --output HDMI-1 --mode 1920x1080 --right-of eDP-1 --scale 1.5x1.5

# xrandr --output DP2 --mode 1920x1080 --right-of eDP1 --scale 1.5x1.5

# xrandr --output DP-2 --mode 1920x1080 --pos 2048x0 --scale 2x2

# Following turns off TV output, change the output ID as needed
# xrandr --output HDMI-1 --off


################################################

xrandr --output eDP-1 --mode 3840x2400 --pos 0x0

# Check if DP-3 is connected
if xrandr | grep -q "^DP-3 connected"; then
    # Set up external display to mirror eDP-1
    xrandr --output DP-3 --mode 1920x1200 --same-as eDP-1 --scale 2x2 --auto
fi

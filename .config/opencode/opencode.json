{
    "$schema": "https://opencode.ai/config.json",
    "plugin": [
        "oh-my-opencode"
    ],
    "mcp": {
        "colossus-mysql": {
            "type": "remote",
            "url": "http://localhost:10356/maas/colossus_mysql/mcp"
        },
        "confluence": {
            "type": "remote",
            "url": "http://localhost:10356/maas/confluence/mcp"
        },
        "gdrive": {
            "type": "remote",
            "url": "http://localhost:10356/maas/gdrive/mcp"
        },
        "gerrit": {
            "type": "remote",
            "url": "http://localhost:10356/maas/gerrit/mcp"
        },
        "gitlab": {
            "type": "remote",
            "url": "http://localhost:10356/maas/gitlab/mcp"
        },
        "jira": {
            "type": "remote",
            "url": "http://localhost:10356/maas/jira/mcp"
        },
        "nvbugs": {
            "type": "remote",
            "url": "http://localhost:10356/maas/nvbugs/mcp"
        },
        "sharepoint": {
            "type": "remote",
            "url": "http://localhost:10356/maas/sharepoint/mcp"
        },
        "maas-onedrive-mcp-server": {
            "type": "remote",
            "url": "http://localhost:10356/maas/onedrive/mcp/mcp"
        }
    },
    "provider": {
        "nvidia-anthropic": {
            "npm": "@ai-sdk/anthropic",
            "name": "NVIDIA Anthropic",
            "options": {
                "baseURL": "https://llm-proxy.perflab.nvidia.com/anthropic/v1",
                "apiKey": "{env:ONEAPI_KEY}"
            },
            "models": {
                "claude-opus": {
                    "id": "claude-opus-4-5-20251101",
                    "name": "Claude 4.5 Opus",
                    "options": {
                        "thinking": {
                            "type": "enabled",
                            "budgetTokens": 16000
                        }
                    }
                }
            }
        }
    },
    "model": "nvidia-anthropic/claude-opus",
    "theme": "solarized-light",
    "permission": {
        "edit": "ask",
        "write": "ask",
        "bash": "ask"
    },
    "tui": {
        "scroll_acceleration": {
            "enabled": true
        },
        "diff_style": "auto"
    },
    "compaction": {
        "auto": true,
        "prune": true
    }
}

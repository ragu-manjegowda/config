{
    "$schema": "https://opencode.ai/config.json",
    "plugin": [
        "oh-my-opencode"
    ],
    "provider": {
        "nvidia-anthropic": {
            "npm": "@ai-sdk/anthropic",
            "name": "NVIDIA Anthropic",
            "options": {
                "baseURL": "https://llm-proxy.perflab.nvidia.com/anthropic/v1",
                "apiKey": "{env:ONEAPI_KEY}"
            },
            "models": {
                "claude-opus": {
                    "id": "claude-opus-4-5-20251101",
                    "name": "Claude 4.5 Opus",
                    "options": {
                        "thinking": {
                            "type": "enabled",
                            "budgetTokens": 16000
                        }
                    }
                }
            }
        }
    },
    "model": "nvidia-anthropic/claude-opus",
    "theme": "solarized-light",
    "permission": {
        "edit": "ask",
        "write": "ask",
        "bash": "ask"
    },
    "tui": {
        "scroll_acceleration": {
            "enabled": true
        },
        "diff_style": "auto"
    },
    "compaction": {
        "auto": true,
        "prune": true
    }
}
